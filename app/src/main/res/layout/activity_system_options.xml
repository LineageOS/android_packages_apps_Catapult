<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurfaceContainerLow"
        android:orientation="vertical"
        android:focusable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon, 4 March"
                    android:textAppearance="?attr/textAppearanceBodySmall" />

                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadlineLarge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:weightSum="4"
                android:clipToPadding="false">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sleep_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="2"
                    android:text="@string/sleep"
                    app:icon="@drawable/ic_moon"
                    style="@style/SystemOptionsButtonStyle" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settings_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_settings"
                    app:iconPadding="0dp"
                    style="@style/SystemOptionsButtonStyle" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/power_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_power"
                    app:iconPadding="0dp"
                    style="@style/SystemOptionsButtonStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:clipToPadding="false">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/network_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/network_status"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:icon="@drawable/ic_wifi_signal_3"
                    style="@style/TwoLineSystemOptionsButtonStyle" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bluetooth_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/bluetooth_status"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_bluetooth"
                    style="@style/TwoLineSystemOptionsButtonStyle" />
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/notification_container"
            android:clipToOutline="true">

            <LinearLayout
                android:id="@+id/no_notification_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/no_notification_access"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/allow_notification_access"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allow_notification_access" />
            </LinearLayout>

            <TextView
                android:id="@+id/no_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_notifications"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.leanback.widget.VerticalGridView
                android:id="@+id/notification_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="18dp"
                android:paddingTop="14dp"
                android:verticalSpacing="10dp"
                app:focusOutEnd="true"
                app:focusOutFront="true" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
