<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:gravity="center_vertical"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:paddingTop="16dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="@dimen/top_bar_text_size"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:layout_weight="1">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/top_bar_text_size"
            android:layout_marginEnd="32dp"/>

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="@dimen/top_bar_text_size"
            android:layout_height="@dimen/top_bar_text_size"
            android:src="@drawable/ic_settings"
            android:tint="@color/settings_color"
            android:contentDescription="@string/settings"
            android:stateListAnimator="@anim/app_card_state_animator"
            android:background="@drawable/settings_button_background"
            style="@style/SettingsButton"/>

    </LinearLayout>
</LinearLayout>