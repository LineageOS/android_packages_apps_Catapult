<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WatchNextCardTitle" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:visibility">gone</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SideActivityHeaderStyle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="SystemOptionsButtonStyle">
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/system_options_button_content_tint</item>
        <item name="backgroundTint">@color/system_options_button_background_tint</item>
        <item name="android:textColor">@color/system_options_button_content_tint</item>
        <item name="android:stateListAnimator">@animator/system_options_button_state_animator</item>
        <item name="android:textColorLink">@color/system_options_button_content_secondary_tint</item>
    </style>

    <style name="TwoLineSystemOptionsButtonStyle" parent="@style/SystemOptionsButtonStyle">
        <item name="iconGravity">start</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
