<resources>
    <style name="WatchNextCardTitle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:visibility">invisible</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="SideActivityHeaderStyle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="SystemOptionsButtonStyle">
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/system_options_button_content_tint</item>
        <item name="backgroundTint">@color/system_options_button_background_tint</item>
        <item name="android:textColor">@color/system_options_button_content_tint</item>
        <item name="android:stateListAnimator">@animator/system_options_button_state_animator</item>
        <item name="android:textColorLink">@color/system_options_button_content_secondary_tint</item>
    </style>

    <style name="TwoLineSystemOptionsButtonStyle" parent="@style/SystemOptionsButtonStyle">
        <item name="iconGravity">start</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NotificationDismissButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:text">@string/dismiss</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:visibility">invisible</item>
        <item name="android:stateListAnimator">@animator/notification_state_animator</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableTop">@drawable/ic_close</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TopBarImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="android:padding">4dp</item>
        <item name="android:stateListAnimator">@animator/app_card_state_animator</item>
        <item name="tint">@color/settings_color</item>
    </style>

    <style name="TopBarSearchButton" parent="TopBarImageButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@drawable/search_button_background</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:stateListAnimator">@animator/search_button_state_animator</item>
        <item name="tint">@color/search_button_icon_color</item>
    </style>

    <style name="PopupMenu" parent="Widget.Material3.PopupMenu" />
</resources>
